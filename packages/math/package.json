{
  "name": "@tkvw/math",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "tsc --watch",
    "build": "pnpm run clean && tsc --noEmit && vite build",
    "clean": "rimraf dist"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "publishConfig": {
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "rimraf": "^6.0.1",
    "typescript": "latest",
    "vite": "^5.1.4",
    "vite-plugin-dts": "4.0.0-beta.1"
  }
}
